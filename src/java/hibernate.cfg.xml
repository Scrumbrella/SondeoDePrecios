<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.OracleDialect</property>
    <property name="hibernate.connection.driver_class">oracle.jdbc.OracleDriver</property>
    <property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:xe</property>
    <property name="hibernate.connection.username">sondeoprecios</property>
    <property name="hibernate.connection.password">root</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <property name="hibernate.show_sql">true</property>
    <mapping class="Modelo.Producto" file="" jar="" package="Modelo" resource="Modelo/Producto.hbm.xml"/>
    <mapping class="Modelo.Categoria" file="" jar="" package="Modelo" resource="Modelo/Categoria.hbm.xml"/>
    <mapping class="Modelo.Usuario" package="Modelo" resource="Modelo/Usuario.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
